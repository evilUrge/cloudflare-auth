{
  "name": "cloudflare-auth-service",
  "version": "1.0.0",
  "description": "Authentication service with multi-project support",
  "main": "src/index.ts",
  "scripts": {
    "build": "cd admin && npm install && npm run build",
    "build:admin": "cd admin && npm run build",
    "dev": "npm run build:admin && wrangler dev",
    "deploy": "npm run build && wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply auth-db",
    "db:migrate:local": "wrangler d1 migrations apply auth-db --local",
    "db:create": "wrangler d1 create auth-db",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@types/nodemailer": "^7.0.10",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "nanoid": "^5.0.4",
    "nodemailer": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240815.0",
    "@types/bcryptjs": "^2.4.6",
    "drizzle-kit": "^0.24.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "wrangler": "^4.67.0"
  }
}
